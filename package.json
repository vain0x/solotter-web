{
  "name": "solotter-web",
  "version": "2.0.0",
  "description": "Twitter client webapp for those who wants to stay on work",
  "main": "index.js",
  "repository": "https://github.com/vain0x/solotter-web",
  "author": "vain0x <vainzerox@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "test": "run-s prod:server-build prod:test",
    "dev": "run-p dev:*",
    "dev:client-build": "cross-env NODE_ENV=development webpack --mode development --watch --progres",
    "dev:server-build": "tsc --watch --preserveWatchOutput",
    "dev:server-serve": "cross-env NODE_ENV=development nodemon ./index.js --watch ./dist/server",
    "dev:test": "cross-env NODE_ENV=development mocha ./dist/index.spec.js --watch ./dist/*.js ./server/*",
    "prod": "run-s prod:*",
    "prod:client-build": "cross-env NODE_ENV=production webpack --mode production",
    "prod:server-build": "tsc",
    "prod:server-serve": "cross-env NODE_ENV=production node ./index.js",
    "prod:test": "cross-env NODE_ENV=production mocha ./dist/index.spec.js"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.2",
    "awesome-typescript-loader": "^5.2.1",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "source-map-loader": "^0.2.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1"
  },
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/csurf": "^1.9.35",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/history": "^4.7.0",
    "@types/oauth": "^0.9.0",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.8",
    "@types/serve-static": "^1.13.2",
    "@types/twitter": "^0.0.28",
    "@types/universal-router": "^6.0.0",
    "body-parser": "^1.18.3",
    "csurf": "^1.9.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "history": "^4.7.2",
    "oauth": "^0.9.15",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "serve-static": "^1.13.2",
    "twitter": "^1.7.1",
    "universal-router": "^6.0.0"
  }
}
