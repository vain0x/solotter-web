{
  "name": "solotter-web",
  "version": "3.0.0",
  "description": "Twitter client webapp for those who wants to stay focused on work",
  "main": "index.js",
  "repository": "https://github.com/vain0x/solotter-web",
  "author": "vain0x <vainzerox@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node index.js",
    "dev": "npm-run-concurrently tsc-watch webpack-watch mocha-watch",
    "tsc-build": "tsc --build",
    "tsc-watch": "tsc --watch",
    "webpack-build": "webpack --mode production",
    "webpack-watch": "webpack --mode development --watch",
    "mocha-run": "mocha -r ts-node/register ./src/index.spec.ts --exit",
    "mocha-watch": "mocha -r ts-node/register ./src/index.spec.ts --watch --watch-extensions ts",
    "build": "npm run tsc-build && npm run webpack-build",
    "test": "npm run build && npm run mocha-run"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.24",
    "@types/oauth": "^0.9.1",
    "@types/twitter-text": "^3.1.1",
    "express": "^4.17.3",
    "oauth": "^0.9.15",
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "mocha": "^9.2.2",
    "run-concurrently": "^1.0.0",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
