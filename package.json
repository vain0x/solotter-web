{
  "name": "solotter-web",
  "version": "3.0.0",
  "description": "Twitter client webapp for those who wants to stay focused on work",
  "main": "index.js",
  "repository": "https://github.com/vain0x/solotter-web",
  "author": "vain0x <vainzerox@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node --experimental-specifier-resolution=node target/server/server_main.js",
    "dev": "node scripts/make_package_json.js && npm-run-concurrently tsc-watch webpack-watch mocha-watch",
    "tsc-build": "tsc --build",
    "tsc-watch": "tsc --watch --preserveWatchOutput",
    "webpack-build": "webpack --mode production",
    "webpack-watch": "webpack --mode development --watch",
    "build": "node scripts/make_package_json.js && npm run tsc-build && npm run webpack-build",
    "test": "npm run build && npm run mocha-run"
  },
  "dependencies": {
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.24",
    "@types/oauth": "^0.9.1",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/request": "^2.48.8",
    "@types/request-promise-native": "^1.0.18",
    "cookie-session": "^2.0.0",
    "express": "^4.17.3",
    "oauth": "^0.9.15",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9"
  },
  "devDependencies": {
    "run-concurrently": "^1.0.0",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
